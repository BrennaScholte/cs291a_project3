<% if @current_user %>
  <p>Currently logged in as: <%= @current_user.username %></p>

<h2>Add a new post:</h2>
<%= render 'posts/form' %>

<ul>
    <% @posts.each do |post| %>
        <li>
            <p> Posted by: <%= post.username %> </p>
            <p> <%= post.updated_at.strftime("%B %d, %Y, %I:%M %p") %> </p> 
            <p> Post Body: <%= post.body %> </p>

            <p> *list comments here* </p>
            <p> *form to add new comment* </p>
        </li>
    <% end %>
</ul>

<% end %>